#include "prime.h"
#include "list.h"

extern char *optarg;

int main(int argc, char** argv)
{
	char input;
	char* algorithm_name;
	int memsize;
	int quantum;
	FILE* input_file;
	
	printf("\n");
	printf("Starting program...\n");

	while ((input = getopt(argc, argv, "f:a:m:q:")) != EOF)
	{
		switch (input)
		{
			case 'f':
				input_file = fopen (optarg, "r");
				if (input_file)
				{
					printf("File opened\n");
					fclose (input_file);
				}
 				break;
           
			case 'a':
				// set the value of size (int value) based on optarg
				algorithm_name = optarg;
				break;

			case 'm':
				// set the value of size (int value) based on optarg
				memsize = atoi(optarg);
				break;

			case 'q':
				// set the value of size (int value) based on optarg
				quantum = atoi(optarg);
				break;

			default:
				// do something
				break;
		}
	}

	printf("Applying algorithm: %s\n", algorithm_name);
	
	printf ("The memsize is: %d\n", memsize);
	
	printf ("The quantum is: %d\n", quantum);
}
